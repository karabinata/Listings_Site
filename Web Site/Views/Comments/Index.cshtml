@using Web_Site.Classes
@model IEnumerable<Web_Site.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Author != null)
                {
                    @Html.DisplayFor(modelItem => item.Author.FullName)
                }
                else
                {
                    <i>No author</i>
                }

            </td>
            <td>
               @Utils.CutText(item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.CommentId}) |
                @Html.ActionLink("Details", "Details", new {id = item.CommentId}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.CommentId})
            </td>
        </tr>
    }

</table>

<p>
   @Html.ActionLink("Back to Listings", "Index", "Listings")
</p>
