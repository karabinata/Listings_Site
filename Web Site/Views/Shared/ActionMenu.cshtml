@model Web_Site.Classes.ItemIdAuthor
<div style="margin-bottom: 5px"><a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = Model.ItemId })" role="button">
    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Details
</a>
<a class="btn btn-default btn-sm" href="@Url.Action("CreateComment", "Comments", new { id = Model.ItemId })" role="button">
    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> Comment
</a></div>
@if (User.IsInRole("Admin") || User.Identity.Name == Model.Author)
{
    <div>
        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = Model.ItemId })" role="button">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
        </a>
        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = Model.ItemId })" role="button">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
        </a>
    </div>
}

